# Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to Git!

# ============================================
# GRAFANA CONFIGURATION
# ============================================

# Admin Credentials (CHANGE THESE!)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Server Configuration
GF_SERVER_PROTOCOL=https
GF_SERVER_DOMAIN=your-domain.com
GF_SERVER_ROOT_URL=https://your-domain.com
GF_SERVER_SERVE_FROM_SUB_PATH=false

# Security Settings
GF_SECURITY_SECRET_KEY=GENERATE_RANDOM_SECRET_KEY_HERE
GF_SECURITY_DISABLE_GRAVATAR=true
GF_SECURITY_COOKIE_SECURE=true
GF_SECURITY_COOKIE_SAMESITE=strict
GF_SECURITY_STRICT_TRANSPORT_SECURITY=true

# Authentication
GF_AUTH_DISABLE_LOGIN_FORM=false
GF_AUTH_DISABLE_SIGNOUT_MENU=false
GF_AUTH_ANONYMOUS_ENABLED=false

# Database (Optional - defaults to SQLite)
# GF_DATABASE_TYPE=postgres
# GF_DATABASE_HOST=your-db-host:5432
# GF_DATABASE_NAME=grafana
# GF_DATABASE_USER=grafana
# GF_DATABASE_PASSWORD=your-db-password
# GF_DATABASE_SSL_MODE=require

# Logging
GF_LOG_MODE=console
GF_LOG_LEVEL=info

# Metrics
GF_METRICS_ENABLED=true
GF_METRICS_BASIC_AUTH_USERNAME=metrics
GF_METRICS_BASIC_AUTH_PASSWORD=CHANGE_THIS_METRICS_PASSWORD

# Plugins (comma-separated list)
GF_INSTALL_PLUGINS=

# SMTP (Optional - for email notifications)
# GF_SMTP_ENABLED=true
# GF_SMTP_HOST=smtp.gmail.com:587
# GF_SMTP_USER=your-email@gmail.com
# GF_SMTP_PASSWORD=your-app-password
# GF_SMTP_FROM_ADDRESS=your-email@gmail.com
# GF_SMTP_FROM_NAME=Grafana Dashboard

# ============================================
# PLATFORM-SPECIFIC VARIABLES
# ============================================

# Render.com
RENDER_SERVICE_ID=srv-xxxxx
RENDER_API_KEY=your-render-api-key

# Fly.io
FLY_APP_NAME=grafana-banking-dashboard
FLY_API_TOKEN=your-fly-api-token

# Railway
RAILWAY_PROJECT_ID=your-project-id
RAILWAY_TOKEN=your-railway-token

# Heroku
HEROKU_APP_NAME=grafana-banking-dashboard
HEROKU_API_KEY=your-heroku-api-key
HEROKU_EMAIL=your-email@example.com

# DigitalOcean
DO_APP_ID=your-app-id
DIGITALOCEAN_ACCESS_TOKEN=your-do-token

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

# Application Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Sentry (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=production

# New Relic (Optional)
# NEW_RELIC_LICENSE_KEY=your-license-key
# NEW_RELIC_APP_NAME=Grafana Banking Dashboard

# ============================================
# BACKUP & RECOVERY
# ============================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# S3 Backup (Optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=grafana-backups
# AWS_REGION=us-east-1

# ============================================
# PERFORMANCE & SCALING
# ============================================

# Resource Limits
MAX_MEMORY=512M
MAX_CPU=1

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# FEATURE FLAGS
# ============================================

FEATURE_ANALYTICS=true
FEATURE_ALERTING=true
FEATURE_REPORTING=false
FEATURE_ENTERPRISE=false

# ============================================
# NOTES
# ============================================

# 1. Generate secure passwords using:
#    PowerShell: -join ((48..57) + (65..90) + (97..122) | Get-Random -Count 32 | ForEach-Object {[char]$_})
#    Linux/Mac: openssl rand -base64 32

# 2. Never commit this file with real values to Git
#    Add .env.production to .gitignore

# 3. Rotate secrets every 90 days

# 4. Use different passwords for each environment

# 5. Store sensitive values in platform secret managers when possible
