# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ============================================
# PLAID CONFIGURATION (REQUIRED)
# ============================================

# Get these from https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=your_production_client_id_here
PLAID_SECRET=your_production_secret_here

# Environment: sandbox, development, or production
# For production deployment, use 'production'
PLAID_ENV=production

# Products to enable (comma-separated)
# Options: transactions, auth, identity, assets, investments, liabilities, payment_initiation, deposit_switch, income_verification, signal
PLAID_PRODUCTS=auth,transactions,signal

# Country codes (comma-separated)
# Options: US, CA, GB, FR, ES, NL, DE, IT, PL, DK, NO, SE
PLAID_COUNTRY_CODES=US

# Redirect URI for OAuth (if using OAuth flow)
# Set this to your production domain
PLAID_REDIRECT_URI=https://yourdomain.com/oauth-redirect

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application URL (your production domain)
APP_URL=https://yourdomain.com

# API Base URL (if different from APP_URL)
API_URL=https://api.yourdomain.com

# Port configuration (for local/container use)
FRONTEND_PORT=3000
BACKEND_PORT=8000

# ============================================
# DATABASE CONFIGURATION (if applicable)
# ============================================

# Database connection string
# DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=

# Redis URL (for caching/sessions)
# REDIS_URL=redis://user:password@host:port
REDIS_URL=

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Session secret (generate a strong random string)
# Use: openssl rand -base64 32
SESSION_SECRET=generate_a_strong_random_secret_here

# JWT secret (if using JWT authentication)
JWT_SECRET=generate_another_strong_random_secret_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & LOGGING
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN (for error tracking)
SENTRY_DSN=

# New Relic License Key (for APM)
NEW_RELIC_LICENSE_KEY=

# ============================================
# CLOUD PLATFORM SPECIFIC
# ============================================

# Docker Hub
DOCKER_USERNAME=owlbandocker
DOCKER_IMAGE_TAG=latest

# Heroku
HEROKU_APP_NAME=your-app-name

# Vercel
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Render.com
RENDER_SERVICE_ID=

# Fly.io
FLY_APP_NAME=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# SendGrid (for emails)
SENDGRID_API_KEY=

# Stripe (for payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Google Analytics
GA_TRACKING_ID=

# ============================================
# NOTES
# ============================================

# 1. Never commit this file with real values to version control
# 2. Use environment-specific files: .env.development, .env.staging, .env.production
# 3. Store secrets in your platform's secret management (Heroku Config Vars, Vercel Environment Variables, etc.)
# 4. Rotate secrets regularly
# 5. Use strong, unique values for all secrets
# 6. Enable 2FA on all service accounts
